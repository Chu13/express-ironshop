<h2> Product Details </h2>

<h3> <%= productDetails.name %> </h3>

<p> Price: $<%=productDetails.price %> </p>

<p> <%= productDetails.description %> </p>

<img  src="<%= productDetails.imageUrl %>" />

<p> Added on <%= productDetails.dateAdded %> </p>

<a href="/products/<%= productDetails._id %>/edit">
  Edit this Product
</a>


<h3> Reviews </h3>
<a href="/products/<%= productDetails._id %>/reviews/new">
  Write a Review
</a>

<ul>
<%  listOfReviews.forEach((oneReview) => { %>
    <li>
      <h4> <%= oneReview.stars %> out of 5</h4>
      <p> <%= oneReview.content %> </p>
      <p> by <%= oneReview.authorName %> (<%= oneReview.authorEmail %>)</p>
    </li>
<%  }) %>
</ul>
